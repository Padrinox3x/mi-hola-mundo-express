<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Carrusel</title>
    <link rel="stylesheet" href="/css/carrusel.css">
</head>
<body>
<div class="page-wrapper">
<!-- ===== FORMULARIO SUBIR IMAGEN ===== -->
<form class="upload-card" action="/carrusel/upload" method="POST" enctype="multipart/form-data" id="formImagen">
    <h2>ğŸ“¤ Subir imagen al carrusel</h2>

    <input 
        type="text" 
        name="titulo" 
        placeholder="TÃ­tulo de la imagen"
        required
    >

    <label class="file-label">
        <input 
            type="file" 
            name="imagen" 
            id="imagenInput"
            accept=".png,.jpg,.jpeg"
            required
        >
        ğŸ“ Seleccionar imagen
    </label>

    <!-- MENSAJE DE ERROR -->
    <p class="error-msg" id="errorImagen"></p>

    <button type="submit">â¬† Subir imagen</button>
</form>


<!-- ===== CARRUSEL ===== -->
<div class="carrusel">
    <div class="slides">
        <% imagenes.forEach((img) => { %>
            <div class="slide">
                <img src="<%= img.UrlImagen %>" alt="<%= img.Titulo %>">
                <h3><%= img.Titulo %></h3>
            </div>
        <% }) %>
    </div>

    <button class="prev">â®</button>
